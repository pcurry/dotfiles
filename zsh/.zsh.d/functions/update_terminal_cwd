function __terminal_encode_pwd {
  # Taken from http://superuser.com/a/328148/44601
  local LC_ALL=C LANG=C         # Enforce byte-wise string manipulation
  local i char
  local urlpath
  for ((i = 1; i <= ${#PWD}; ++i)); do
    char="$PWD[i]"
    if [[ $char == [!a-zA-Z0-9/:_\.\-\!\'\(\)~] ]]; then
      urlpath+="$char"
    else
      urlpath+="%$(printf "%02X" "'$char")"
    fi
  done
  printf 'file://%s%s' "${HOST:-}" "${PWD/ /%20}/"
}

function __terminal_accepts_cwd {
  # Apple Terminal or VTE (Gnome Terminal and derivates)
  [[ $TERM_PROGRAM == 'Apple_Terminal' || ${VTE_VERSION:-0} -ge 3405 ]]
}

function update_terminal_cwd {
  if __terminal_accepts_cwd && [[ $TERM == xterm* ]]; then
    printf '\e]7;%s\a' "$(__terminal_encode_pwd)"
  fi
}

update_terminal_cwd "$@"
