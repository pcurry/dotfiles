# -*- mode: ruby; -*-

# Install with:
#
# $ brew tap Homebrew/bundle
# $ brew bundle

tap 'homebrew/bundle'
tap 'homebrew/dupes'

# Shell
brew 'zsh'
brew 'tmux'                     # Terminal multiplexer
brew 'tree'                     # Directory tree printer
brew 'autojump'                 # Fast directory jumping for Zsh
brew 'thefuck'                  # Fuck the last command
brew 'coreutils'                # To have GNU tools at hand in need
brew 'findutils'
brew 'gnu-sed'

# Tools
brew 'homebrew/dupes/less'      # The built-in less is horribly outdated
brew 'homebrew/dupes/rsync'     # rsync, likewise...
brew 'httpie'                   # Powerful http client
brew 'youtube-dl'               # Youtube Downloader

# Documents and images
brew 'pandoc'                   # Markdown converting reloaded
brew 'mupdf-tools'              # Command line PDF tools
brew 'ghostscript'              # For LaTeXIT and MacTeX
brew 'imagemagick'              # Command line image manipulation
brew 'optipng'                  # PNG optimisation

# Dotfile management
brew 'stow'

# Development tools
brew 'git'
brew 'xctool'                   # Build tool for XCode projects
brew 'the_silver_searcher'      # Code search
brew 'the_platinum_searcher'    # Also code search :)
brew 'shellcheck'               # Shell script linting
brew 'ansible'                  # Worst provisioning system ever :(
brew 'cloc'                     # Count code lines
brew 'redis'                    # Redis client

# Github frontends
brew 'gist'
brew 'hub'

# Languages
# A decent Ruby version and Python 3.  We get PyQT as well for jupyter qtconsole
brew 'ruby'
brew 'python3'
brew 'pyqt', args: ['with-python3']
# Java and Scala
brew 'maven'
brew 'sbt'
brew 'scalastyle'
# A sad necessity
brew 'node'
# The cool stuff (Coq, Rust, Haskell)
brew 'coq'
brew 'rust'
brew 'haskell-stack'

# Emacs
# tap 'railwaycat/emacsmacport'   # Emacs Mac port
# brew 'emacs-mac', args: ['with-spacemacs-icon', 'with-xml2', 'with-gnutls']
brew 'trash'                    # Command line trashing, used by Emacs
brew 'texinfo'
brew 'aspell', args: ['with-lang-de', 'with-lang-en']
brew 'emacs', args: ['with-cocoa', 'with-gnutls', 'with-librsvg', 'devel']
