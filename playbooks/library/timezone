import platform

from ansible.module_utils.basic import *


def main():
    module = AnsibleModule(
        argument_spec=dict(
            name=dict(required=True),
        ),
        supports_check_mode=True
    )

    timezone = module.params['name']

    if platform.system() == 'Darwin':
        _, output, _ = module.run_command(['systemsetup', '-gettimezone'],
                                          check_rc=True)
        output = output.strip()
        if not output.startswith('Time Zone: '):
            module.fail_json(
                msg='Failed to parse timezone from ' + repr(output))
        changed = timezone != output[11:]
        if changed and not module.check_mode:
            module.run_command(['systemsetup', '-settimezone', timezone],
                               check_rc=True)
        module.exit_json(name=timezone, changed=changed, message='OK')
    else:
        module.fail_json(msg='Operating system not supported')


main()
