import pwd

from ansible.module_utils.basic import *


def main():
    module = AnsibleModule(
        argument_spec=dict(
            name=dict(required=True),
            shell=dict(required=True),
        ),
        supports_check_mode=True
    )

    name = module.params['name']
    shell = module.params['shell']
    changed = pwd.getpwnam(name).pw_shell != shell
    if changed and not module.check_mode:
        module.run_command(['chsh', '-s', shell, name], check_rc=True)
    module.exit_json(name=name, shell=shell, changed=changed, msg='OK')


main()
